<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:layout_margin="20dp"
    tools:context=".MainActivity">

    <TextView android:id="@+id/biddername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="biddername"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/biddingamount"
        />

    <TextView
        android:id="@+id/biddingamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/signup_btn_shaper"
        android:gravity="center"
        android:padding="8dp"
        android:text="biddingamount"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/btn_workers_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/biddername" />

    <TextView
        android:id="@+id/biddernotes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="4dp"
        android:text="bidder notes"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/btn_workers_info"
        app:layout_constraintStart_toStartOf="@id/biddername"
        app:layout_constraintTop_toBottomOf="@id/biddername" />

    <Button
        android:id="@+id/btn_workers_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/biddername"
        app:layout_constraintTop_toBottomOf="@id/biddingamount" />
</androidx.constraintlayout.widget.ConstraintLayout>