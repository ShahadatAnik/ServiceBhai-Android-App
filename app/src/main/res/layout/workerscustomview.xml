<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:layout_margin="20dp"
    tools:context=".MainActivity">

    <TextView android:id="@+id/workersName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="workersName"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_worker_contact"
        />

    <Button
        android:id="@+id/btn_worker_contact"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="Contact"
        android:backgroundTint="@color/green"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/worker_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/workersName" />

    <TextView android:id="@+id/worker_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/workersName"
        app:layout_constraintStart_toStartOf="@id/workersName"
        app:layout_constraintEnd_toStartOf="@id/btn_worker_contact"
        />


</androidx.constraintlayout.widget.ConstraintLayout>